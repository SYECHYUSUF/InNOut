<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" styleClass="login-container" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="innout.controller.RegisterController">
    <children>
        <Label styleClass="user-icon" text="📝" />

        <TextField fx:id="emailField" maxWidth="250.0" promptText="Email" styleClass="login-input" />
        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" styleClass="login-input" />

        <Button fx:id="registerButton" maxWidth="250.0" onAction="#handleRegister" styleClass="login-button" text="✨ Create Account" />

        <Hyperlink fx:id="showLoginFormLink" onAction="#showLoginForm" styleClass="login-link" text="Already have an account? Login here" />
    </children>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
</VBox>