<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="innout.controller.RegisterUserController">
    <children>
        <TextField fx:id="emailField" layoutX="100" layoutY="50" promptText="Email" />
        <PasswordField fx:id="passwordField" layoutX="100" layoutY="100" promptText="Password" />
        <Button fx:id="registerButton" layoutX="100" layoutY="150" text="Register" onAction="#handleRegister"/>
        <Hyperlink layoutX="100" layoutY="200" text="Already have an account? Login here" onAction="#showLoginForm"/>
    </children>
</AnchorPane>
