<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="innout.controller.UserDashboardController"
      styleClass="root" alignment="CENTER" spacing="20.0" stylesheets="style.css">

    <Label text="Welcome, User!" styleClass="header-title" />

    <VBox alignment="CENTER" spacing="15.0"> <Button fx:id="katalogEventButton" onAction="#handleKatalogEventAction" text="Katalog Event" styleClass="button" maxWidth="200" />
        <Button fx:id="presentInButton" onAction="#handlePresentInAction" text="Present In" styleClass="button" maxWidth="200" />
        <Button fx:id="logEventButton" onAction="#handleLogEventAction" text="Log Event" styleClass="button" maxWidth="200" />
    </VBox>

    <padding>
        <Insets top="50" right="20" bottom="50" left="20" />
    </padding>
</VBox>