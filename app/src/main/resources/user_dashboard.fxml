<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="innout.controller.UserDashboardController">
    <!-- Greeting Section -->
    <Label text="Welcome, User!" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-padding: 10px;"/>

    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="katalogEventButton" onAction="#handleKatalogEventAction" text="Katalog Event" />
        <Button fx:id="presentInButton" onAction="#handlePresentInAction" text="Present In" />
        <Button fx:id="logEventButton" onAction="#handleLogEventAction" text="Log Event" />
    </HBox>
</VBox>
