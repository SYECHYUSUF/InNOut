<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="600.0" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="innout.controller.ManajemenUserController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <top>
        <HBox alignment="CENTER_LEFT" styleClass="transparent-pane" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" />
            </BorderPane.margin>
            <children>
                <Label styleClass="header-title" text="👥 Manajemen User" />
            </children>
        </HBox>
    </top>
    <center>
        <VBox spacing="15.0" styleClass="transparent-pane" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="userTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="kolomEmail" text="👤 Email" />
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="transparent-pane">
                    <children>
                        <Button fx:id="hapusUserButton" onAction="#handleHapusUserButtonAction" text="🗑️ Hapus User" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" styleClass="transparent-pane" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
            <children>
                <Button fx:id="kembaliKeDashboardButton" onAction="#handleKembaliKeDashboardButtonAction" text="🔙 Kembali ke Dashboard" />
            </children>
        </HBox>
    </bottom>
</BorderPane>