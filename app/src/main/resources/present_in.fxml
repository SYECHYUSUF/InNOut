<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Alert.AlertType?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="innout.controller.PresentInEventController">
    <!-- Title and Instructions -->
    <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
        <Label text="Your Purchased Events" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    </HBox>

    <!-- Grid to display event cards -->
    <TilePane fx:id="eventTilePane" hgap="10" vgap="10" style="-fx-padding: 20;">
        <!-- Card for each event will be added dynamically from the controller -->
    </TilePane>
</VBox>
