<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController" prefWidth="400" prefHeight="300">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="300" prefHeight="250">
        <Label text="InNOut" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button text="Login" onAction="#handleLogin" />

        <HBox alignment="CENTER">
            <Label text="Belum punya akun?" />
            <Hyperlink text="Registrasi disini" onAction="#goToRegis"/>
        </HBox>
    </VBox>

</AnchorPane>